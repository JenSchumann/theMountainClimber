<!DOCTYPE html>
<html ng-app="mtnfever">
  <head>
    <% include ../partials/head.ejs %>
  </head>
  <body>

    <header>

      <% include ../partials/nav.ejs %>

    </header>

      <main>
                <h2>Climber Profile:</h2>
                <form action="/climbers/<%=climber._id%>?_method=PUT" method="POST">

                  <div class="tbody">
                    <div class="table-row-group">

                      <p class="text-uppercase">Update Profile Name</p>
                                <div class="input-group">

                                  <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-user"></span>
                                  </span>
                                  <input type="text" class="form-control" name="name" placeholder="Profile Name" value="<%=climber.name%>"/>
                                  <br/> </div>

                      <p class="text-uppercase">Update Profile Image</p>
                                  <div class="input-group">
                                  <span class="input-group-addon">
                                  <span class="glyphicon glyphicon-picture"></span>
                                  </span>

                                  <input type="url" class="form-control" name="img" placeholder="Update Photo" value="<%=climber.img%>"/>
                                  <br/> </div>

                      <p class="text-uppercase">Update Climber Profile</p>
                                  <div class="input-group">
                                  <span class="input-group-addon">
                                  <span class="glyphicon glyphicon-pencil"></span>
                                  </span>

                                  <input type="text" class="form-control" name="description" placeholder="Climber Profile Update" value="<%=climber.description%>" /> </br> </div>




  <p class="text-uppercase">Update 14eener Fever</p>
              <div class="input-group">
              <span class="input-group-addon">
              <span class="glyphicon glyphicon-pencil"></span>
              </span>

              <input type="text" class="form-control" name="whatLoveREClimb14eenrs" placeholder="What I like most about climbing 14eeners" value="<%=climber.whatLoveREClimb14eenrs;%>" /> </br> </div>


<!-- this needs select/option functionality: -->
  <p class="text-uppercase">Update Climber Level</p>
              <div class="input-group">
              <span class="input-group-addon">
              <span class="glyphicon glyphicon-pencil"></span>
              </span>

              <input type="text" class="form-control" name="climberLevel" placeholder="Climber Level Update" value="<%=climber.climberLevel;%>" />
              <select name="climberLevel">
                <option value="Beginner">Beginner</option>
                <option value="Intermediate">Intermediate</option>
                <option value="Accomplished">Accomplished</option>
                <option value="Advanced">Advanced</option>
                <option value="Expert">Expert</option>

              </select> </br> </br> </div>



  <p class="text-uppercase">Update Favorite Mountaineering Gear</p>
              <div class="input-group">
              <span class="input-group-addon">
              <span class="glyphicon glyphicon-pencil"></span>
              </span>

              <input type="text" class="form-control" name="faveClimbGear" placeholder="Favorite Mountaineering Gear" value="<%=climber.faveClimbGear;%>" /> </br> </div>



  <p class="text-uppercase">Update 14eener Fever Advice</p>
              <div class="input-group">
              <span class="input-group-addon">
              <span class="glyphicon glyphicon-pencil"></span>
              </span>

              <input type="text" class="form-control" name="fourteenerClimbAdvice" placeholder="Climber Profile Update" value="<%=climber.fourteenerClimbAdvice;%>" /> </br> </div>



<!-- this needs select/option functionality: -->
  <p class="text-uppercase">Update 14eeners I hope to climb</p>
              <div class="input-group">
              <span class="input-group-addon">
              <span class="glyphicon glyphicon-pencil"></span>
              </span>

              <input type="text" class="form-control" name="wannaClimbThese14eenrs" placeholder="14eeners I hope to climb" value="<%=climber.wannaClimbThese14eenrs;%>" /> </br> </div>













                      <hr>
                      <div class="input-group">
                                  <span class="input-group-addon">
                                  <span class="glyphicon glyphicon-circle-arrow-up"></span>
                                  </span>

                                  <input type="submit" class="form-control" name="submit" placeholder="Submit Update" value="Update Climber" /> </br> </div>




              </div>
            </div>
                </form>

                <section>
                    <form action="/climbers/<%=climber._id%>?_method=DELETE" method="POST">
                    <input class="btn btn-default" role="button" type="submit" value="Delete Climber" />

                      <hr>

                    </form>

                </section>

      </main>

    <% include ../partials/footer.ejs %>

  </body>
</html>
