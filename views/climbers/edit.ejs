<!DOCTYPE html>
<html ng-app="mtnfever">
  <head>
    <% include ../partials/head.ejs %>
  </head>
  <body>

    <header>

      <% include ../partials/nav.ejs %>

    </header>

      <main>
                <h2>Climber Profile:</h2>
                <form action="/climbers/<%=climber._id%>?_method=PUT" method="POST">

                  <div class="tbody">
                    <div class="table-row-group">

                      <p class="text-uppercase">Update Username</p>
                                <div class="input-group">

                                  <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-user"></span>
                                  </span>
                                  <input type="text" class="form-control" name="name" placeholder="Profile Name" value="<%=climber.name%>"/>
                                  <br/> </div>

                      <p class="text-uppercase">Update Profile Image</p>
                                  <div class="input-group">
                                  <span class="input-group-addon">
                                  <span class="glyphicon glyphicon-picture"></span>
                                  </span>

                                  <input type="url" class="form-control" name="img" placeholder="Update Photo" value="<%=climber.img%>"/>
                                  <br/> </div>

                      <p class="text-uppercase">Update Climber Profile</p>
                                  <div class="input-group">
                                  <span class="input-group-addon">
                                  <span class="glyphicon glyphicon-pencil"></span>
                                  </span>

                                  <input type="text" class="form-control" name="description" placeholder="Climber Profile Update" value="<%=climber.description%>" /> </br> </div>
                      <hr>
                      <div class="input-group">
                                  <span class="input-group-addon">
                                  <span class="glyphicon glyphicon-circle-arrow-up"></span>
                                  </span>

                                  <input type="submit" class="form-control" name="submit" placeholder="Submit Update" value="Update Climber" /> </br> </div>




              </div>
            </div>
                </form>
      </main>

    <% include ../partials/footer.ejs %>

  </body>
</html>
