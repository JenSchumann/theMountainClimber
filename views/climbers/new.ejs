<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head.ejs %>
  </head>
  <body>
    <% include ../partials/loggedInNav.ejs %>


          <main class="profile">
            <h1>Create Climber Profile</h1>
            <div class="container">
                  <form action="/climbers" method="POST">
                        <div class="tbody">
                            <div class="table-row-group">

                                <div class="input-group">
                                  <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-user"></span>
                                  </span>
                                  <input type="text" class="form-control" name="name" placeholder="Profile Name" /> </br> </div>



                                <div class="input-group">
                                  <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-picture"></span>
                                  </span>
                                  <input type="url" class="form-control" name="img" placeholder="Photo URL" /> </br> </div>



                                <div class="input-group">
                                  <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-pencil"></span>
                                  </span>
                                  <input type="text" class="form-control" name="description" placeholder="About You" /> </br> </div>



                                <div class="input-group">
                                  <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-circle-arrow-up"></span>
                                  </span>
                                  <input type="submit" class="form-control" name="submit" placeholder="Create Climber" /> </br> </div>

                              </div>
                            </div>

                    </form>
            </div>
          </main>

  <% include ../partials/footer.ejs %>

  </body>
</html>
