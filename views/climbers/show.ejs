<!DOCTYPE html>
<html ng-app="mtnfever">
  <head>
    <% include ../partials/head.ejs %>

    <style media="screen">
          img {
            height: 400px;
            width: 400px;
          }
        </style>
  </head>
      <header>

      <% include ../partials/nav.ejs %>

      </header>


<!-- climber post modal -->
<div class="modal fade bd-climbers-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content data-spy="scroll"">
      <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLongTitle">Have the Fever? <%=climber.name;%></h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">


                              <h2><%=climber.name;%><br/></h2>
                              <img src="<%=climber.img;%>"> <br/>
                              <h3>About: <%=climber.description;%></h3><br/>
                            </div>


                            <!-- bottom of modal: -->

                            <div class="modal-footer">
                              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                              <!-- <button type="button" class="btn btn-primary">Save changes</button> -->
                            </div>
                            </div><!-- /.modal-content -->
                            </div><!-- /.modal-dialog -->
                            </div><!-- /.modal -->





                      <ul>

					                  <% for(let i = 0; i < climber.climbs.length; i++){ %>

                                      <h2>Fourteener Posts:</h2>
                                       <li><a href="/climbs/<%=climber.climbs[i]._id%>">
                                       <%=climber.climbs[i].fourteeners%></a></li><br/>
                                       <li> <img src="<%=climber.climbs[i].img;%>"></li><br/>
                                       <li><%=climber.climbs[i].about%></li><br/>
                                       <li><%=climber.climbs[i].date%></li><br/>
                            <% } %>
				              </ul>










              <section>

                    <a href="/climbers/<%=climber._id%>/edit" class="btn btn-default" role="button">Edit</a>

                    <hr>

              </section>

              <section>
                  <form action="/climbers/<%=climber._id%>?_method=DELETE" method="POST">
                  <input class="btn btn-default" role="button" type="submit" value="Delete Climber" />

                    <hr>

                  </form>

              </section>





    </main>



  </body>
</html>
